<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/RelativeLayout04"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <RelativeLayout
            android:id="@+id/RelativeLayout05"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/shiting">
            <TextView
                android:id="@+id/AuditionText"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="试听"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/PurchaseTextRL"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="42.7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/goumai">
                <TextView
                    android:id="@+id/PurchaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="购买"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@id/RelativeLayout04">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <RelativeLayout
                android:id="@+id/RelativeLayout01"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <ImageView
                    android:id="@+id/background_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY">
                </ImageView>
                <ImageView
                    android:id="@+id/blackground_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:background="@color/black">
                </ImageView>
                <Button
                    android:id="@+id/findBackBtn"
                    android:layout_width="7.5dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginLeft="5.5dp"
                    android:background="@mipmap/backwhite" />
                <TextView
                    android:id="@+id/title_course"
                    android:layout_toRightOf="@id/findBackBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="47dp"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/course_icon1"
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_below="@id/title_course">
                </ImageView>
                <ImageView
                    android:id="@+id/course_icon2"
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_below="@id/title_course"
                    android:layout_toRightOf="@id/course_icon1">
                </ImageView>
                <ImageView
                    android:id="@+id/course_icon3"
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_below="@id/title_course"
                    android:layout_toRightOf="@id/course_icon2">
                </ImageView>
                <TextView
                    android:id="@+id/classification_course"
                    android:layout_below="@id/title_course"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="16.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout02"
                android:layout_below="@id/RelativeLayout01"
                android:layout_width="match_parent"
                android:layout_height="51dp">
                <TextView
                    android:id="@+id/Price"
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_height="14dp"
                    android:textSize="14dp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginLeft="12dp"
                    ></TextView>
                <TextView
                    android:id="@+id/MembershipFree"
                    android:layout_toRightOf="@id/Price"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="14dp"
                    android:textSize="14dp"
                    android:text=""
                    android:textColor="#3c5fc5"
                    android:layout_marginLeft="5dp"
                    ></TextView>
                <RelativeLayout
                    android:id="@+id/Collection"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/shoucang">
                    <TextView
                        android:id="@+id/CollectionText"
                        android:layout_width="64dp"
                        android:layout_height="13.5dp"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="27.5dp"
                        android:textColor="#ffffff"/>
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/view1"
                android:layout_below="@id/RelativeLayout02"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f3f4f6">
            </ImageView>
            <RelativeLayout
                android:id="@+id/RelativeLayout03"
                android:layout_below="@id/view1"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Headportrait"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp" />
                <TextView
                    android:id="@+id/Teachername"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/Headportrait"
                    android:text=""
                    android:layout_marginLeft="23dp"
                    android:textSize="17dp"
                    android:textColor="#111111">
                </TextView>
                <ImageView
                    android:id="@+id/toteacher"
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="19dp"
                    android:background="@mipmap/forwardgray">
                </ImageView>
            </RelativeLayout>
            <ImageView android:id="@+id/view2"
                android:layout_below="@id/RelativeLayout03"
                android:layout_width="match_parent"
                   android:layout_height="3dp"
                   android:background="#f3f4f6"></ImageView>
            <LinearLayout
                android:id="@+id/coursell"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/CourseIntroduction"
                        android:layout_width="match_parent"
                        android:layout_height="40.5dp"
                        android:layout_marginLeft="75dp"
                        android:gravity="center"
                        android:text="课程介绍"
                        android:textColor="@drawable/tab_head_text"
                        android:textSize="18.5dp" />

                    <View
                        android:id="@+id/CourseIntroductionLine"
                        android:layout_width="match_parent"
                        android:layout_height="2.5dp"
                        android:layout_below="@id/CourseIntroduction"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/tab_menu_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="75dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/AllCourses"
                        android:layout_width="match_parent"
                        android:layout_height="40.5dp"
                        android:text="所有课程"
                        android:textColor="@drawable/tab_head_text"
                        android:gravity="center"
                        android:textSize="18.5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <View
                        android:id="@+id/AllCoursesLine"
                        android:layout_below="@id/AllCourses"
                        android:layout_width="match_parent"
                        android:layout_height="2.5dp"
                        android:background="@drawable/tab_menu_line" />
                </RelativeLayout>
            </LinearLayout>
            <ImageView android:id="@+id/view3"
                android:layout_below="@id/coursell"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#f3f4f6"></ImageView>

            <RelativeLayout
                android:id="@+id/RelativeLayout06"
                android:layout_below="@id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <WebView
                    android:id="@+id/CourseIntroductionText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="16.5dp"
                    android:background="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout07"
                android:layout_below="@id/view3"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <ListView
                    android:id="@+id/viewCourseList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null">
                </ListView>
                <LinearLayout
                    android:id="@+id/viewCourseNodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="42dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/nodata" />

                    <TextView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffafafaf"
                        android:textSize="18sp"
                        android:text="@string/empty_data" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>