<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Father_BottemView"
        android:layout_width="match_parent"
        android:layout_height="40.5dp"
        android:background="#ffffff">
        <LinearLayout
            android:id="@+id/coursell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ChildPhCourseTxt"
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="@string/Course"
                android:textColor="@drawable/tab_head_text"
                android:textSize="18.5dp"
                android:textStyle="bold"/>
            <View
                android:id="@+id/ChildPhCourseLine"
                android:layout_below="@id/ChildPhCourseTxt"
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@drawable/tab_menu_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/PhTeacherTxt"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="@string/Teacher"
                    android:textColor="@drawable/tab_head_text"
                    android:gravity="center"
                    android:textSize="18.5dp"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/PhTeacherLine"
                    android:layout_below="@id/PhTeacherTxt"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/tab_menu_line" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
                android:id="@+id/SearchBtnImg"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/searchactive" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>