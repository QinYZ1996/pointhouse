<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@drawable/border_top"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/activity_group_item_padding"
    android:paddingLeft="@dimen/activity_group_item_padding"
    android:paddingRight="@dimen/activity_group_item_padding"
    android:paddingStart="@dimen/activity_group_item_padding">

    <FrameLayout
        android:id="@+id/frameGroup"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/groupImg"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical|start"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/group_my"
            android:src="@drawable/class_default" />

        <TextView
            android:id="@+id/txtMsgCount"
            android:minWidth="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/red_point"
            android:textSize="12.0dp" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/frameGroup"
        android:layout_toRightOf="@id/frameGroup">

        <TextView
            android:id="@+id/groupName"
            style="@style/paddingLeft8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_2f2f2f"
            android:textSize="17.0dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/groupStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/group_apply_add"
            android:textColor="@color/color_3c5fc5"
            android:textSize="12.0dp" />


        <TextView
            android:id="@+id/groupMember"
            style="@style/paddingLeft8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_828282"
            android:textSize="12.0dp" />


    </RelativeLayout>


</RelativeLayout>