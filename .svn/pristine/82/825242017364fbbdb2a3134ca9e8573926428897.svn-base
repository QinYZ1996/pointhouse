<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <ImageView
            android:id="@+id/imgCourseType"
            android:layout_width="2.5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:contentDescription="@string/walkman_course_type"
            android:src="@mipmap/header" />

        <TextView
            android:id="@+id/txtCourseType"
            style="@style/walkman_text"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/imgCourseType"
            android:layout_toRightOf="@id/imgCourseType"
            android:text="@string/walkman_course_type"
            android:textSize="16.0dp" />
    </RelativeLayout>
</RelativeLayout>