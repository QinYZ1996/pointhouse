<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_option"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/k1_12_border_normal">

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="19.5dp"
            android:layout_height="16.5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_option_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/k1_12_choice_text_normal"
            android:textSize="16dp"
            android:typeface="normal"/>

        <TextView
            android:id="@+id/tv_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/iv_option"
            android:layout_toRightOf="@id/iv_option"
            android:textColor="@color/k1_12_choice_text_normal"
            android:textSize="16dp"
            android:typeface="normal"/>
    </RelativeLayout>
</RelativeLayout>