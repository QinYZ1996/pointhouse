<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="left">
        <RelativeLayout
            android:onClick="findPsw_back"
            android:id="@+id/findBackBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp">
            <Button
                android:onClick="findPsw_back"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="@mipmap/backblack" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textColor="#000000"
            android:textSize="19dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginTop="0.5dp"
        android:layout_gravity="center_vertical|left"
        android:background="#f2f3f4"
        />


    <LinearLayout
        android:layout_marginTop="35dp"
        android:id="@+id/phoneLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="10"
            android:id="@+id/findphoneText"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:inputType="number"
            android:background="@null"
            android:textColorHint="#c7c7c7"
            android:imeOptions="actionNext"
            android:textColor="#c7c7c7"
            android:paddingBottom="1dp"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical|bottom"
                android:id="@+id/find_timepick"
                android:layout_width="27.5dp"
                android:layout_height="25dp"
                android:layout_marginRight="-5dp"
                android:layout_alignRight="@id/findphoneText"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@mipmap/resetpassword"
                android:gravity="center"
                android:text="123"
                android:textColor="@color/color_activity_blue_bg"
                android:textSize="12.5dp"></TextView>

            <Button
                android:id="@+id/findsendMessage_btn"
                android:layout_weight="1"
                android:onClick="sendShorMessageClick"
                android:layout_width="89.5dp"
                android:layout_height="25.5dp"
                android:layout_alignRight="@id/findphoneText"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:background="@mipmap/resetpasswordactive"
                android:text="发送验证码"
                android:textSize="15dp"></Button>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:background="#f2f3f4"
        />
    <TextView
        android:id="@+id/ceshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:text="为了安全,我们会向你的手机发送验证码"
        android:textSize="11dp"
        android:background="@null"
        android:textColor="#9b9b9b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <EditText
            android:id="@+id/findmessage_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="请输入短信验证码"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingBottom="1dp"
            android:textColorHint="#c7c7c7"
            android:background="@null"
            android:textColor="#c7c7c7"
            android:textSize="15dp"></EditText>

        <ImageView
            android:layout_weight="1"
            android:layout_width="18.5dp"
            android:layout_height="15.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@mipmap/register">
        </ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="14dp"
        android:background="#f2f3f4"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <EditText android:id="@+id/findfirstpsd"
            android:layout_weight="7"
            android:inputType="textPassword"
            android:hint="请输入6-16位字母数字"
            android:textColorHint="#c7c7c7"
            android:textSize="15dp"
            android:paddingBottom="1dp"
            android:imeOptions="actionNext"
            android:textColor="#c7c7c7"
            android:layout_width="fill_parent"
            android:background="@null"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_weight="1"
            android:layout_width="12.5dp"
            android:layout_height="15.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@mipmap/password"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="14dp"
        android:background="#f2f3f4"
        />



    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <EditText android:id="@+id/findsecondpsd"
            android:layout_weight="7"
            android:inputType="textPassword"
            android:hint="@string/againpsd"
            android:textColorHint="#c7c7c7"
            android:textSize="15dp"
            android:imeOptions="actionDone"
            android:paddingBottom="1dp"
            android:textColor="#c7c7c7"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_weight="1"
            android:layout_width="12.5dp"
            android:layout_height="15.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@mipmap/password"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="14dp"
        android:background="#f2f3f4"
        />
    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="38.5dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/resetpsd"
            android:onClick="clickReset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="重置密码"
            android:background="@mipmap/resetpassword"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>