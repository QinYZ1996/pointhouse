<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nim_background_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="18.0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialog_text"
        android:background="@color/color_aaaaaa_content_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_activity_blue_bg"
            android:textSize="18.0dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/dialog_text_divide"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_aaaaaa_content_text"
            android:visibility="gone"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_activity_blue_bg"
            android:textSize="18.0dp"
            />
    </LinearLayout>

</RelativeLayout>