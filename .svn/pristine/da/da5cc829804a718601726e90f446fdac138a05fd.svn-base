<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mypurchase_course_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="60.5dp"
            android:layout_height="60.5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon1_default"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60.5dp"
            android:layout_alignTop="@id/iv_course"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_course">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#111111"
                android:textSize="17dp"/>

            <RelativeLayout
                android:id="@+id/rl_course_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_course_name"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_course_classification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#969696"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_course_classification"/>

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv1"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv2"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_course_1"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_course_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#3c5fc5"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_course_purchase_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:includeFontPadding="false"
                    android:textColor="#969696"
                    android:textSize="12dp">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="83.5dp"
        android:layout_marginTop="20dp"
        android:background="#f2f3f4"/>
</LinearLayout>