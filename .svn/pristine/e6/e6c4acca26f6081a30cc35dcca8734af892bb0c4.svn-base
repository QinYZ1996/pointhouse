<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="101.5dp">
    <ImageView
        android:id="@+id/courselistImg"
        android:layout_width="60.5dp"
        android:layout_height="60.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="100.5dp"
        android:layout_toRightOf="@id/courselistImg"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/courselistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="17dp"
            android:textColor="#111111"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.5dp"
            android:layout_below="@id/courselistName">
            <TextView
                android:id="@+id/courselistClassification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="12dp"
                android:textColor="#969696"/>
            <ImageView
                android:id="@+id/courselistDraw1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/courselistClassification"
                />
            <ImageView
                android:id="@+id/courselistDraw2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/courselistDraw1"
                />
            <ImageView
                android:id="@+id/courselistDraw3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/courselistDraw2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelativeLayout1"
            android:layout_marginTop="5.5dp">
            <TextView
                android:id="@+id/courselistCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="14dp"
                android:textColor="#3c5fc5"/>
            <TextView
                android:id="@+id/courselistBuyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:textColor="#969696">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
   <View
       android:id="@+id/viewLine"
       android:layout_below="@id/relativeLayout"
       android:layout_marginLeft="82dp"
       android:layout_width="wrap_content"
       android:layout_height="1dp"
       android:background="#f5f5f5">
   </View>
</RelativeLayout>