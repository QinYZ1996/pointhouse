<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="left">
        <RelativeLayout
            android:onClick="Setting_back"
            android:id="@+id/mysettings_backbtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp">
            <Button
                android:onClick="Setting_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:background="@mipmap/backblack"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:text="设置"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000" />
    </RelativeLayout>
    <View
        android:id="@+id/mysettings_topview"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#f2f3f4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="187dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:divider="@null"
            android:id="@+id/mysettings_listview">
        </ListView>

        <Button
            android:id="@+id/mysettings_btn"
            android:layout_width="306.5dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:text="退出登录"
            android:background="@mipmap/tuichudenglu"
            android:textColor="#c7c7c7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>