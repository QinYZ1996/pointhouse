<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="left">

        <Button
            android:id="@+id/binding_BackBtn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:layout_width="7.5dp"
            android:layout_height="14dp"
            android:background="@mipmap/backblack"/>

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="绑定手机"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginTop="0.5dp"
        android:layout_gravity="center_vertical|left"
        android:background="#f2f3f4"
        />


    <LinearLayout
        android:id="@+id/phoneLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/binding_phoneText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="10"
            android:background="@null"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/binding_timepick"
                android:layout_width="27.5dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/phoneText"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginRight="-5dp"
                android:layout_weight="1"
                android:background="@mipmap/resetpassword"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_activity_blue_bg"
                android:textSize="12.5dp"></TextView>

            <Button
                android:id="@+id/binding_sendMessage_btn"
                android:layout_width="89.5dp"
                android:layout_height="25.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@mipmap/resetpasswordactive"
                android:onClick="sendShorMessageClick"
                android:text="发送验证码"
                android:textSize="15dp"></Button>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="6dp"
        android:background="#f2f3f4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <EditText
            android:id="@+id/binding_message_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="请输入短信验证码"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingBottom="1dp"
            android:textColorHint="#c7c7c7"
            android:textColor="#c7c7c7"
            android:background="@null"
            android:textSize="15dp"></EditText>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="6dp"
        android:background="#f2f3f4"
        />

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="38.5dp"
        android:layout_marginTop="142dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/binding_resbtn"
            android:onClick="regBtnClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            android:text="现在绑定"
            android:background="@mipmap/xianzaibangding"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>