<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <RelativeLayout
            android:id="@+id/mypurchase_backbtn"
            android:layout_width="60dp"
            android:onClick="Pur_back"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp">
            <Button
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:onClick="Pur_back"
                android:background="@mipmap/backblack"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的购买"
            android:textSize="19dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>
    </RelativeLayout>

    <com.pointhouse.chiguan.common.updatecommon.PullToRefreshListView
        android:id="@+id/mypurchaseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/explosion_two">
    </com.pointhouse.chiguan.common.updatecommon.PullToRefreshListView>
</LinearLayout>