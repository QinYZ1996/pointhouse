<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mycollection_course_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ImageView
        android:id="@+id/mycollection_iv_course"
        android:layout_width="60.5dp"
        android:layout_height="60.5dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/layout_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/mycollection_iv_course"
        android:layout_toRightOf="@id/mycollection_iv_course">


        <TextView
            android:id="@+id/mycollection_tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="#111111"
            android:textSize="17dp"/>

        <RelativeLayout
            android:id="@+id/mycollection_rl_course_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mycollection_tv_course_name"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/mycollection_tv_course_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#969696"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/mycollection_iv_video"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mycollection_tv_course_classification"/>

            <ImageView
                android:id="@+id/mycollection_iv_music"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mycollection_iv_video"/>

            <ImageView
                android:id="@+id/mycollection_iv_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mycollection_iv_music"/>

            </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/thirdview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mycollection_rl_course_1"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:id="@+id/mycollection_tv_course_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="#3c5fc5"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/mycollection_tv_course_purchase_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:includeFontPadding="false"
                        android:textColor="#969696"
                        android:textSize="12dp">
                    </TextView>
                </RelativeLayout>

        </RelativeLayout>
    <View
        android:id="@+id/mycollection_viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_course"
        android:layout_marginLeft="84dp"
        android:background="#f2f3f4"/>

</RelativeLayout>